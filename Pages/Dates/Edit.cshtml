@page
@model MorseCodeApp2.Pages.Dates.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Date</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Date.ID" />
            <div class="form-group">
                <label asp-for="Date.CreatedAt" class="control-label"></label>
                <input asp-for="Date.CreatedAt" class="form-control" />
                <span asp-validation-for="Date.CreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date.UpdatedAt" class="control-label"></label>
                <input asp-for="Date.UpdatedAt" class="form-control" />
                <span asp-validation-for="Date.UpdatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
