@page
@model MorseCodeApp2.Pages.CustomMasks.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>CustomMask</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CustomMask.ID" />
            <div class="form-group">
                <label asp-for="CustomMask.Character" class="control-label"></label>
                <input asp-for="CustomMask.Character" class="form-control" />
                <span asp-validation-for="CustomMask.Character" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomMask.CustomEquivalent" class="control-label"></label>
                <input asp-for="CustomMask.CustomEquivalent" class="form-control" />
                <span asp-validation-for="CustomMask.CustomEquivalent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomMask.UserID" class="control-label"></label>
                <select asp-for="CustomMask.UserID" class="form-control" asp-items="ViewBag.UserID"></select>
                <span asp-validation-for="CustomMask.UserID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
